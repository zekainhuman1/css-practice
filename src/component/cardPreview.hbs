{{#with data}}
<div class="preview">
    <div class="preview_header">
        <span class="preview_header_item preview_date">{{date}}2</span>

        {{#each category}}
        <span class="preview_header_item preview_category preview_category_{{id}}">{{text}}</span>
        {{/each}}
    </div>
    <strong class="preview_title">{{title}}</strong>
    <p class="preview_description">{{text}}</p>
    <a href="#">Continue reading</a>
</div>
{{/with}}